@model AgroStoreProject.Models.CustomerDetail

@{
    ViewBag.Title = "CustomerLogin";
}

<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/Content/LoginRegister.css" type="text/css" />
</head>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="container">
            <div class="row">

                <!-- Mixins-->
                <!-- Pen Title-->

                <div class="container">
                    <div class="card"></div>
                    <div class="card">
                        <h1 class="title">Login</h1>
                        <form>
                            <div class="input-container">

                                <div class="form-group">
                                    @*@Html.LabelFor(model => model.CustMobileNumber, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                    <div class="col-md-10">
                                        Mobile Number
                                        @Html.TextBoxFor(model => model.CustMobileNumber, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.CustMobileNumber, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="bar"></div>
                            </div>

                            <div class="input-container">

                                <div class="form-group">
                                    @*@Html.LabelFor(model => model.CustPwd, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                    <div class="col-md-10">
                                        Password
                                        @Html.PasswordFor(model => model.CustPwd, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.CustPwd, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="bar"></div>
                            </div>

                            <div class="button-container">

                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Login" class="btn btn-outline-primary" />
                                </div>

                            </div>

                        </form>
                    </div>

                    <!-- Portfolio--><a id="portfolio" href="http://pkshopy.com/farooqshad/" title="View my portfolio!"><i class="fa fa-link"></i></a>
                </div>
            </div>
        </div>
    </div>
}
@{
    if (ViewBag.Message = true)
    {
        <div>
            <p style="color:red"><center>Invalid Credentials</center></p>
        </div>
    }

}
